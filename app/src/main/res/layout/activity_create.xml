<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateActivity"
    android:weightSum="10"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1000"
            android:layout_height="0dp"
            android:paddingTop="30dp"
            tools:ignore="Suspicious0dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="-7dp"
                android:padding="8dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:fontFamily="@font/italic"
                android:layout_marginTop="-10dp"
                android:text="Post your offer details"
                android:textColor="@color/teal_200"
                android:textSize="28dp"
                android:textStyle="italic|bold" />

            tools:srcCompat="@tools:sample/avatars" />


        </LinearLayout>

        <EditText
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:autoLink="web|phone"
            android:background="@drawable/edit_text_bg"
            android:drawableStart="@drawable/ic_baseline_location_on_24"
            android:drawableLeft="@drawable/ic_baseline_location_on_24"
            android:drawablePadding="8dp"
            android:hint="Search location"
            android:textColor="@color/black"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColorHint="#556B2F"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2000dp"
            android:layout_margin="20dp"
            android:layout_weight="8"
            android:background="@color/white"
            android:orientation="vertical">


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:padding="14dp"
                android:rowCount="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    app:cardBackgroundColor="#E8DCCA"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="8dp">


                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="12dp"
                        android:layout_gravity="center"
                        android:layout_weight="40"
                        android:src="@drawable/img_3">

                    </ImageView>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="Rental offer"
                        android:fontFamily="@font/italic"
                        android:textAlignment="center"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:textColor="#000">

                    </TextView>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="#E8DCCA"
                    app:cardElevation="8dp">


                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_weight="40"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/img_1"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="Roommate offer"
                        android:fontFamily="@font/italic"
                        android:textAlignment="center"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:textColor="#000">

                    </TextView>


                </androidx.cardview.widget.CardView>
            </GridLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="10dp"
                android:text="Property types"
                android:fontFamily="@font/italic"
                android:textColor="@color/black"
                android:textSize="21dp"
                android:textStyle="italic|bold">

            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <Button
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edit_text_bg"
                    android:text="House"
                    android:textSize="12dp" />

                <Button
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/edit_text_bg"
                    android:text="Room"
                    android:textSize="12dp" />

                <Button
                    android:layout_width="85dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/edit_text_bg"
                    android:src="@drawable/img_3"
                    android:text="Studio"
                    android:textSize="12dp" />

                <Button
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/edit_text_bg"
                    android:src="@drawable/img_3"
                    android:text="Flat"
                    android:textSize="12dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="10dp"
                android:text="Seeking a"
                android:fontFamily="@font/italic"
                android:textColor="@color/black"
                android:textSize="21dp"
                android:textStyle="italic|bold">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edit_text_bg"
                    android:layout_marginStart="14dp"
                    android:text="Student"
                    android:textSize="12dp" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/edit_text_bg"
                    android:text="Family"
                    android:textSize="12dp" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/edit_text_bg"
                    android:src="@drawable/img_3"
                    android:text="Young active"
                    android:textSize="12dp" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="10dp"
                android:text="Gender"
                android:fontFamily="@font/italic"
                android:textColor="@color/black"
                android:textSize="21dp"
                android:textStyle="italic|bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edit_text_bg"
                    android:layout_marginStart="14dp"
                    android:text="MALE"
                    android:textSize="12dp" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/edit_text_bg"
                    android:text="FEMALE"
                    android:textSize="12dp" />

                <Button
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/edit_text_bg"
                    android:src="@drawable/img_3"
                    android:text="NO PREFERENCE"
                    android:textSize="12dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="10dp"
                android:text="Property details"
                android:fontFamily="@font/italic"
                android:textColor="@color/black"
                android:textSize="21dp"
                android:textStyle="italic|bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <EditText
                    android:layout_width="319dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="22dp"
                    android:background="@drawable/edit_text_bg"
                    android:hint="Property title"
                    android:inputType="textPersonName"
                    android:layout_marginTop="0dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColorHint="#556B2F" />

                <EditText
                    android:layout_width="319dp"
                    android:layout_height="44dp"
                    android:background="@drawable/edit_text_bg"
                    android:layout_marginTop="10dp"
                    android:hint="Property description"
                    android:layout_marginStart="22dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColorHint="#556B2F"/>

                <EditText
                    android:layout_width="319dp"
                    android:layout_height="44dp"
                    android:background="@drawable/edit_text_bg"
                    android:layout_marginTop="10dp"
                    android:hint="Area(mÂ²)"
                    android:layout_marginStart="22dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColorHint="#556B2F"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="10dp"
                android:text="Availability of the property"
                android:fontFamily="@font/italic"
                android:textColor="@color/black"
                android:textSize="21dp"
                android:textStyle="italic|bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <EditText
                    android:layout_width="319dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="22dp"
                    android:background="@drawable/edit_text_bg"
                    android:hint="Date"
                    android:inputType="textPersonName"
                    android:layout_marginTop="0dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColorHint="#556B2F" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="10dp"
                android:text="Contact Details"
                android:fontFamily="@font/italic"
                android:textColor="@color/black"
                android:textSize="21dp"
                android:textStyle="italic|bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <EditText
                    android:layout_width="319dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="22dp"
                    android:drawableStart="@drawable/ic_baseline_email_24"
                    android:drawableLeft="@drawable/ic_baseline_email_24"
                    android:background="@drawable/edit_text_bg"
                    android:drawablePadding="8dp"
                    android:hint="Email"
                    android:inputType="textPersonName"
                    android:layout_marginTop="0dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColorHint="#556B2F" />

                <EditText
                    android:layout_width="319dp"
                    android:layout_height="44dp"
                    android:background="@drawable/edit_text_bg"
                    android:layout_marginTop="10dp"
                    android:hint="Phone"
                    android:drawableStart="@drawable/ic_ocal_phone"
                    android:drawableLeft="@drawable/ic_ocal_phone"
                    android:drawablePadding="8dp"
                    android:layout_marginStart="22dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColorHint="#556B2F"/>

                <EditText
                    android:layout_width="319dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_bg"
                    android:hint="Price"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColorHint="#556B2F" />

            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:padding="14dp"
                android:rowCount="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="#E8DCCA"
                    app:cardElevation="8dp">


                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:layout_weight="40"
                        android:src="@drawable/img_6">

                    </ImageView>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:fontFamily="@font/italic"
                        android:text="Upload Now"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="17dp"
                        android:textStyle="bold">

                    </TextView>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="#E8DCCA"
                    app:cardElevation="8dp">


                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_weight="40"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/img" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:fontFamily="@font/italic"
                        android:text="Upload Later"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="17dp"
                        android:textStyle="bold">

                    </TextView>


                </androidx.cardview.widget.CardView>
            </GridLayout>


        </LinearLayout>

    </LinearLayout>
</ScrollView>